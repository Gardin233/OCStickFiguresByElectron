{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node", "vite/client"],
    "skipLibCheck": true
  },
  "include": ["src", "src/client/utils"],
  "exclude": ["src/renderer.ts"]
}
